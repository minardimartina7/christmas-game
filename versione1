        button:hover { background: #45a049; }
        #result { background: #fff3cd; padding: 15px; border-radius: 5px; margin: 20px 0; font-weight: bold; }
        .player-section { background: #e3f2fd; padding: 20px; border-radius: 10px; margin: 20px 0; }
